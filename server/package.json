{
  "name": "pawsiq-backend",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --project ../tsconfig.json && tsc-alias -p ../tsconfig.json",
    "start": "node dist/server/index.js",
    "render-build": "npm run build && prisma migrate deploy --schema ../prisma/schema.prisma",
    "postinstall": "prisma generate --schema ../prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-status": "^2.1.0",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "prisma": "^6.14.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.3.3"
  }
}
