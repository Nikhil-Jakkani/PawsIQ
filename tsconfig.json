{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./server/src",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["server/src/config/*"]
    },
    "outDir": "./dist/server",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["server/src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
